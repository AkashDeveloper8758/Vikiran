<!DOCTTYPE html>
<html>
    include header.pug
    
    <body>

        -var intra= []
        -var inter= []

        each r in event_details
            -if(r.Competition_Type=="Intra")
                -intra.push(r)
            -else 
                -inter.push(r)
            

        <div class="container">

            if(value==1)
                br
                h3(class="text-center")= "Intra-Competition"
                div(class="row")
                    each r in intra
                        div(class="col-4")
                            br
                            div(class="card" style="width: 18rem;")
                                div(class="card-body")
                                    h5(class="card-title text-center")= "Society : "+r.Society_Name  
                                    h6(class="card-subtitle mb-2 text-muted text-center")= "Event : "+r.Event_Name
                                    a(href="/register/"+r.Society_Name class="card-link")= "More Info"

            else if(value==2)
                br
                h3(class="text-center")= "Inter-Competition"
                div(class="row")
                    each r in inter
                        div(class="col-4")
                            br
                            div(class="card" style="width: 18rem;")
                                div(class="card-body")
                                    h5(class="card-title text-center")= "Society : "+r.Society_Name  
                                    h6(class="card-subtitle mb-2 text-muted text-center")= "Event : "+r.Event_Name
                                    a(href="/register/"+r.Society_Name class="card-link")= "More Info"

        </div>
            

        <script src="../vikiran.js"></script>
    </body>
</html>