<!DOCTTYPE html>
<html>
    include header.pug
    
    <body>
     div(class="color")
        -var key=['Event Name', 'About','Co-ordinators','Venue','Date','Timing'];
        -var value=[event.Event_Name, event.About,[event.Co_ordinator1,event.Co_ordinator2],event.Venue,event.Event_Date,event.Event_Time]
        <div class="container">
        div(class="pad")
            h3(class="text-center content")= event.Society_Name
            <br><br>
            <table class="text-center content">
                <col width="600vw" height="1vh">
                <col width="600vw"  >
                <thead>
                    <tr>
                        th="Events:-"
                        th="Details:-"
                    </tr>
                </thead>
                <tbody>
                    -for(var i=0;i<key.length;i++)
                        <tr>
                            td= key[i]
                            -if(i!=2)
                                td= value[i]
                            -else
                                td=value[i][0]+"  &  "+value[i][1]
                        </tr>
                </tbody>
            </table>
            
            <br><br>
            <div class="content">
            <h4 class="text-center">Rules:-</h4>
            <ul>
                -for(var i=0;i<4;i++)
                    -if(event.Rules[i+1]!=' ')    
                        li= event.Rules[i+1]
            </ul>

            button(type="button" class="btn btn-primary" data-toggle="modal" data-target="#exampleModal")= "Register"

            form(id="form_members")
                <div class="modal fade" id="exampleModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
                    <div class="modal-dialog" role="document">
                        <div class="modal-content">
                            <div class="modal-header">
                                <h5 class="modal-title" id="exampleModalLabel">Registration</h5>
                                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                    <span aria-hidden="true">&times;</span>
                                </button>
                            </div>
                            <div class="modal-body">
                                label(for="numbers" style="margin-right:1.5vw")= "Total Members"
                                select(id="numbers")
                                    -for(var i=1;i<=20;i++)
                                        option(value=i)= i
                                    br
                            </div>
                            <div class="modal-footer">
                                <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                                <button type="submit" class="btn btn-primary">Submit</button>
                            </div>
                        </div>
                    </div>
                </div>
        </div>   

        script.
            var ev= '!{event.Event_Name}';

        <script src="../vikiran.js"></script></body>
</html>